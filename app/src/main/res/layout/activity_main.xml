<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="5"
    tools:context=".MainActivity"
    android:background="@drawable/blackback"

    >

    <ImageView
        android:id="@+id/imageView"
        android:contentDescription="@string/Logo"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_column="0"
        android:layout_marginTop="58dp"
        app:srcCompat="@drawable/squarelogo"
        android:layout_marginBottom="40sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SignInTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:fontFamily="@font/electrolize"
                android:text="@string/SignInText"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_marginBottom="30sp"/>

            <EditText
                android:id="@+id/UserNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20sp"
                android:layout_marginEnd="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginStart="30sp"
                android:background="#11000000"
                android:drawableLeft="@drawable/username_icon"
                android:drawableStart="@drawable/username_icon"
                android:ems="10"
                app:fontFamily="@font/questrial"
                android:hint="@string/NameLink"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/UserPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80sp"
                android:layout_marginEnd="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginStart="30sp"
                android:background="#11000000"
                android:drawableLeft="@drawable/userpassword_icon"
                android:drawableStart="@drawable/userpassword_icon"
                android:ems="10"
                app:fontFamily="@font/questrial"
                android:hint="@string/PasswordLink"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5sp"
                android:layout_marginEnd="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginStart="30sp"
                android:background="@color/brownGreen"
                app:fontFamily="@font/questrial"
                android:text="@string/ButtonLogin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registerLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="30sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginStart="30sp"
                    android:layout_weight="1"
                    app:fontFamily="@font/questrial"
                    android:text="@string/RegisterLink"
                    android:textColor="@color/yellow"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/helpLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/UserNameEditText"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/UserNameEditText"
                    android:layout_gravity="end"
                    android:layout_marginEnd="30sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginStart="30sp"
                    android:layout_weight="1"
                    app:fontFamily="@font/questrial"
                    android:text="@string/HelpText"
                    android:textAlignment="textEnd"
                    android:textColor="@color/yellow"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</GridLayout>

