<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".user_own_profile"
    tools:openDrawer="start">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
    <!--End Drawer Menu-->

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".User_Profile"
    tools:openDrawer="start"
    android:background="@drawable/blackback">

    <!--Start Drawer Menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/Gray"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350sp"
            android:layout_marginBottom="30sp"
            android:layout_marginEnd="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profilePictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="80sp"
                app:srcCompat="@mipmap/ic_launcher"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="@font/pacifico"
                android:paddingTop="20sp"
                android:text="@string/usernameOwnProfile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:fontFamily="@font/electrolize" />

            <RatingBar
                android:id="@+id/userRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginStart="20sp"
                android:numStars="5"
                />

            <TextView
                android:id="@+id/userDescript"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:paddingTop="20sp"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:fontFamily="@font/questrial" />

            <Button
                android:id="@+id/specifyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="40sp"
                android:background="@color/brownGreen"
                android:text="@string/specify_queue_details"
                android:textColor="@color/white"
                android:layout_marginBottom="30sp"
                app:fontFamily="@font/questrial"
                android:textSize="17sp"
                />


        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>
</android.support.v4.widget.DrawerLayout>