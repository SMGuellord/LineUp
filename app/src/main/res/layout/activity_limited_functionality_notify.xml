<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minzint.a4queue.LimitedFunctionalityNotify"
    android:background="@drawable/yellow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="80sp"
                    android:layout_height="200sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    app:srcCompat="@drawable/ic_cloud_off_black_24dp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="80sp"
                    android:layout_height="200sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_gps_off_black_24dp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="80sp"
                    android:layout_height="200sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    app:srcCompat="@drawable/ic_location_off_black_24dp" />
            </RelativeLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:rowCount="1">

            </GridLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <TextView
                android:id="@+id/LimitedFunctionHeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/LimitedFunctionHeading" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <TextView
                android:id="@+id/LimitedFuncitonTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="@string/LimitedFunctionTexts" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="90sp" />

            <Button
                android:id="@+id/LimitedFunctionButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@color/white"
                android:text="@string/LimitedFunctionButton"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
