<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".queue_end_details"
    android:background="@drawable/blackback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:background="@color/white">

            <TextView
                android:id="@+id/QueueOverviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Queue Overview"
                android:textSize="28sp"
                android:textAlignment="center"
                android:paddingTop="80sp"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/electrolize"

                />

            <TextView
                android:id="@+id/PageDescriptionLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PageDescriptionLink"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/questrial"

                />

            <TextView
                android:id="@+id/UsersDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Involved Users:"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:fontFamily="@font/questrial"/>

            <TextView
                android:id="@+id/InvolvedUsersLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/questrial"/>

            <TextView
                android:id="@+id/userLocationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:fontFamily="@font/questrial"/>

            <TextView
                android:id="@+id/userLocationLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/questrial"
                />

            <TextView
                android:id="@+id/userTimeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Time in Queue:"
                android:textSize="17sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/questrial"/>

            <TextView
                android:id="@+id/TimeLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/questrial"
                />

            <TextView
                android:id="@+id/userFeeAmountTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agreed Price:"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:fontFamily="@font/questrial"
                />


            <TextView
                android:id="@+id/UserFeeAmountLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fee"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/questrial"
                />

            <TextView
                android:id="@+id/TotalDueTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Due:"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:fontFamily="@font/questrial"
                />


            <TextView
                android:id="@+id/TotalDueLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TotalDue"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/questrial"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="30sp"
                android:layout_marginTop="20sp"
                android:id="@+id/ActionButtonMatchComplete"
                android:fontFamily="@font/questrial"
                >

                <Button
                    android:id="@+id/QueueDoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:background="@color/brownGreen"
                    android:layout_marginStart="5sp"
                    android:layout_marginLeft="5sp"
                    android:fontFamily="@font/questrial"
                    android:textSize="17sp"/>

                <ImageView
                    android:id="@+id/infoLinkDone"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_column="0"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:paddingRight="10sp"
                    app:srcCompat="@drawable/infomation" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>