<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowseBookings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackback">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/BrowseBookingsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BrowseBookings"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30sp"
                app:fontFamily="@font/electrolize"
                />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleViewBrowseBookings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="20dp"
                    android:layout_marginTop="70sp">

                </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>